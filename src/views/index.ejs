      <div id="main-screen">

        <div class="container-fluid main-screen">



          <div class="row slogan">
            <div class="col animate__animated animate__fadeInRight animate__delay-1s">
              <h1>
                In Good Hands by
                <br>
                <span>Ilona</span>
              </h1>
            </div>
          </div>



          <section id="presentation" class="row justify-content-center">
            <div class="col-lg-10 offset-lg-1">
              <h2 class="pb-2">Anything you are not agree with..</h2>
              <h3>Do you have any inperfection, you want to rid off.. or you have dull, lifeless skin..
                or just need some refreshment..?</h3>
              <h2 class="py-2">Only what you need, is to give yourself in good hands</h2>
              <h3>We are providing all kind of treatments, you need to become
                brand new again </h3>
            </div>
          </section>
        </div>

      </div>

      <!-- ******** services **********-->

      <hr>

      <div id="services">
        <div class="container">
          <div class="row our-services justify-content-center ">
            <div class="col-lg-5 text-center">
              <h2 class="services-our">services</h2>
            </div>
          </div>

          <div class="container-fluid">
            <div class="row justify-content-center">
              <%% services.forEach(service=> { %>
                <%% if(service.imageMain && service.title && service.template && service.descriptionMain) { %>

                  <div class="service-wrap col-lg-6 ">

                    <div class="service px-0 col-lg-12">
                      <a href="/services/<%%= service.template%>">
                        <div class="service-container">

                          <div class="img-overlay">

                            <img src="<%%= service.imageMain.url %>" alt="<%%= service.title %>">
                            <h3 class="service-title">
                              <%%= service.title %>
                            </h3>

                          </div>
                          <p>
                            <%%= service.descriptionMain %>
                          </p>
                        </div>

                    </div>
                    </a>
                  </div>
                  <%% } %>
                    <%% }) %>
            </div>
          </div>

        </div>

      </div>

      </div>

      <%- include ./prices -%>


        <section id="email-map">
          <div class="container mt-4">
            <div class="row p-0">

              <div id="email-input" class="col-lg-6">
                <%- include ./email -%>
              </div>

              <div class="col-lg-6 mt-5 mt-lg-0 pl-0 pl-lg-4 pr-0 pr-lg-4">
                <%- include ./partials/map -%>
              </div>
            </div>
          </div>
        </section>

        <!-- modal window to preview alert message -->
        <div class="modal fade" id="prev" data-backdrop="static" data-keyboard="false" tabindex="-1"
          aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content <%%= popup.msgBgColor %>">
              <div class="modal-header">
                <h5 class="modal-title mr-2" id="staticBackdropLabel">
                  Header
                </h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%% if(popup) { %>
                  <h5 class="popup-text align-middle <%%= popup.msgFontSize %> <%%= popup.msgColor %> ">
                    <%%= popup.message %>
                  </h5>
                  <%% } %>
              </div>
              <div class="modal-footer">

                <button class="btn btn-sm btn-outline-danger">
                  Confirm
                </button>

              </div>
            </div>
          </div>
        </div>



