<%- include ./partials/header -%>



  <div class="container mb-5">

    <h1 class="m-5">Welcome back</h1>


    <hr>
    <!-- About page -->
    <h2 class="mb-5">Make changes to About page</h2>

    <div class="row about mb-5">
      <div class="col-6 text-center">
        <img src="<%%= about.image.url %>" alt="About image">
      </div>
      <div class="col-6">
        <p>
          <%%= about.about %>
        </p>
      </div>
      <div class="col-12 mt-5">
        <a href="/admin/about">
          <button type="button" class="btn btn-secondary btn-block">
            Viev About page
          </button>
        </a>
      </div>
    </div>

    <hr>

    <!--Gallery  -->
    <h2 class="mb-5">Make changes to Gallery</h2>

    <div class="gallary-images flex">

      <%% gallery.forEach(img=> { %>
        <div class="gallery-image flex-item">
          <img src="<%%= img.galleryImage.url %>">
        </div>
        <%% })%>
    </div>

    <a class="btn btn-secondary btn-block mt-4" href="/admin/gallery">Go to Gallery</a>
  </div>
  </div>
  </div>

  <hr class="my-5">

  <!-- Services -->
  <div class="container mb-5">
    <h2>Chose Service you want to EDIT or DELETE</h2>
    <div class="row mt-4">
      <%% services.forEach(service=> { %>
        <div class="col-md-4 mt-3 service-admin">
          <a href="/admin/services/<%%= service.title %>">
            <div class="img-gradient">
              <img class="img-service-admin" src="<%%= service.imageMain.url %>" alt="<%%= service.title %>" />
              <h4>
                <%%= service.title %>
              </h4>
            </div>
          </a>
        </div>
        <%% }) %>
    </div>

    <a class="btn btn-block btn-secondary mt-5" href="/admin/services/service-new">Add new service</a>
  </div>

  <hr />

  <!-- Prices -->
  <div class="container mt-5">
    <h2 class="mb-3">EDIT or DELETE service Prices</h2>
    <div class="row">
      <%% prices.forEach(price=> { %>

        <div class="col-md-3 prices">
          <div>
            <h4 class="pb-2">
              <%%= price.serviceTitle %>
            </h4>
            <a class="btn btn-info" href="/admin/prices/<%%= price._id %>">View</a>
            <button type="button" class="btn btn-danger" data-toggle="modal"
              data-target="#confirmDeleteModal<%%= price._id %>">Delete</button>

          </div>
          <!-- modal window to confirm delete price block -->
          <div class="modal fade" id="confirmDeleteModal<%%= price._id %>" data-backdrop="static" data-keyboard="false"
            tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">
                    Delete price: <%%= price.serviceTitle %>?
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">Please confirm deleting the price</div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                  </button>
                  <form class="d-inline" action="/admin/prices/<%%= price._id %>?_method=DELETE" method="POST">
                    <input type="hidden" name="_csrf" value="<%%= csrfToken%>">
                    <button class="btn btn-danger">Confirm</button>
                  </form>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%% }) %>
    </div>
    <a class="btn btn-block btn-secondary mt-5 mb-5" href="/admin/prices/price-new">Add new price</a>
  </div>

  <hr />

  <!-- Contacts -->
  <div id="contacts" class="container">
    <h2 class="mb-3">EDIT or DELETE Contact info</h2>
    <div class="row text-center">
      <div class="contact col-md-4 my-3 my-md-0">
        <h2>
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-geo-alt-fill contact-icon" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
          </svg>Find us
        </h2>
        <%% contacts.forEach(contact=> { %>
          <h3>
            <%%= contact.address1stLine %>
          </h3>
          <p>
            <%%= contact.address2ndLine %>
          </p>
          <%% }) %>
      </div>
      <div class="contact col-md-4 my-3 my-md-0">
        <h2>
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-telephone-fill contact-icon"
            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M2.267.98a1.636 1.636 0 0 1 2.448.152l1.681 2.162c.309.396.418.913.296 1.4l-.513 2.053a.636.636 0 0 0 .167.604L8.65 9.654a.636.636 0 0 0 .604.167l2.052-.513a1.636 1.636 0 0 1 1.401.296l2.162 1.681c.777.604.849 1.753.153 2.448l-.97.97c-.693.693-1.73.998-2.697.658a17.47 17.47 0 0 1-6.571-4.144A17.47 17.47 0 0 1 .639 4.646c-.34-.967-.035-2.004.658-2.698l.97-.969z" />
          </svg>Contact us
        </h2>
        <%% contacts.forEach(contact=> { %>
          <h3>
            <%%= contact.telephone %>
          </h3>
          <p><em>
              <%%= contact.email %>
            </em></p>
          <%% }) %>
      </div>
      <div class="contact col-md-4 my-3 my-md-0">
        <h2>
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-clock contact-icon" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z" />
            <path fill-rule="evenodd"
              d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z" />
          </svg> Our hours
        </h2>
        <%% contacts.forEach(contact=> { %> <%% if( contact.day || contact.dayFrom || contact.dayTo || contact.ampmFrom
            || contact.ampmTo ) { %>

            <h3>
              <%% if(contact.day) { %>
                <%%= contact.day %>
                  <%% } else { %>
                    <%%= contact.dayFrom %>-<%%= contact.dayTo %>
                        <%% } %> / <%%= contact.hoursFrom %>:<%%= contact.minsFrom %>
                              <%%= contact.ampmFrom %>-<%%= contact.hoursTo %>:<%%= contact.minsTo %>
                                    <%%= contact.ampmTo %>
            </h3>

            <%% } %>
              <%% }) %>
      </div>
    </div>

    <a class="btn btn-secondary btn-block mt-5 mb-5" href="/admin/contacts/contacts-edit">View and edit contacts</a>
  </div>

  <hr />

  <%- include ./partials/footer -%>